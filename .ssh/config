Include config.d/*
Include hosts.d/*

# Host Template:
# Host x
#     Hostname full.host.name.com (or 1.2.3.4)
#     User <username>
#     IdentitiesOnly yes
#     IdentityFile ~/.ssh/keys/id_x_ed25519

Host *
    IdentityFile ~/.ssh/keys/%r@%h
    GSSAPIAuthentication no
    AddKeysToAgent yes
    UseKeychain yes
    ControlMaster auto
    ControlPath ~/.ssh/control/master-%r@%h:%p
